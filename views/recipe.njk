{% extends "layout.njk" %}
{% block header%}
  <title>{{ item.title }}</title>
  {%endblock%}
  {% block content %}
    <section class="recipes">
      <div class="image">
        <img src="{{ item.image }}" alt="imagem do {{ item.title }}">
      </div>
      <div class="recipe-title-author">
        <h1>{{ item.title }}</h1>
        <h2>por
          {{ item.author }}</h2>
      </div>
      <div class="recipes-info">
        <div class="methods">
          <div class="sub-title">
            <h2>Ingredientes</h2>
            <div class="mostrar">
              <ul>
                {% for i in item.ingredients %}
                  <li>{{ i }}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>

        <div class="methods">
          <div class="sub-title">
            <h2>Modo de Preparo</h2>
            <div class="mostrar">
              {% for e in item.preparation %}
                <p>{{ e }}</p>
              {% endfor %}

            </div>
          </div>
        </div>
        <div class="methods">
          <div class="sub-title">
            <h2>Informações adicionais</h2>
            <div class="mostrar">

              <p>{{ item.information }}</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

{% endblock %}